{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "requireBranch": "chore/release"
  },
  "github": {
    "release": true,
    "web": true,
    "autoGenerate": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# What's New",
      "preset": "angular"
    }
  }
}
